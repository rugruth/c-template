{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean All (Delete Build Folder)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Recurse -Force build"
            ],
            "group": "build"
        },
        {
            "label": "CMake Configure (Debug & Release)",
            "dependsOn": [
                "CMake Configure (Debug)",
                "CMake Configure (Release)"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "command": "echo",
            "args": ["CMake configure for Debug and Release completed."],
            "problemMatcher": []
        },
        {
            "label": "CMake Configure (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": []
        },
        {
            "label": "Make Build (Debug)",
            "type": "shell",
            "command": "ninja",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build/debug"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/release",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "problemMatcher": []
        },
        {
            "label": "Make Build (Release)",
            "type": "shell",
            "command": "ninja",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Run Executable (Debug)",
            "type": "shell",
            "command": ".\\build\\debug\\out\\${workspaceFolderBasename}.exe",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "Run Executable (Release)",
            "type": "shell",            
            "command": ".\\build\\release\\out\\${workspaceFolderBasename}.exe",
            "group": "test",
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}